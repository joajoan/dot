# Enable color support
export COLORTERM=truecolor

# Safely append PATH
append () { [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]] && export PATH="$1:$PATH"; }
append "/opt/nvim-linux64/bin"
append "$HOME/.cargo/bin"
append "$HOME/.local/bin"

# Configure Cargo
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"
