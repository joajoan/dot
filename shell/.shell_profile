# Safely prepend PATH
prepend () { [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]] && export PATH="$1:$PATH"; }
prepend "$HOME/.cargo/bin"
prepend "$HOME/.local/bin"
prepend "$HOME/.opencode/bin"

# Configure Cargo
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

# Configure NVM
[ -s "$HOME/.nvm/nvm.sh" ] && source "$HOME/.nvm/nvm.sh"
